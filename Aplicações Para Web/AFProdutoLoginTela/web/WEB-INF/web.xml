<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ValidarLogin</servlet-name>
        <servlet-class>classes.ValidarLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCadastrarProduto</servlet-name>
        <servlet-class>classes.ServletCadastrarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletConsultarProduto</servlet-name>
        <servlet-class>classes.ServletConsultarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletRelatorio</servlet-name>
        <servlet-class>classes.ServletRelatorio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAtualizaProdutos</servlet-name>
        <servlet-class>classes.ServletAtualizaProdutos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ValidarLogin</servlet-name>
        <url-pattern>/ValidarLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCadastrarProduto</servlet-name>
        <url-pattern>/ServletCadastrarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletConsultarProduto</servlet-name>
        <url-pattern>/ServletConsultarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletRelatorio</servlet-name>
        <url-pattern>/ServletRelatorio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAtualizaProdutos</servlet-name>
        <url-pattern>/ServletAtualizaProdutos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
