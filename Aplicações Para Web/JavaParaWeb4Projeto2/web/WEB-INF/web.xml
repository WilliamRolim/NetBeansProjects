<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLogar</servlet-name>
        <servlet-class>br.com.videoaulas.servlets.controller.ServletLogar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogar1</servlet-name>
        <servlet-class>br.com.videoaulas.servlets.controller.ServletLogar1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogar2</servlet-name>
        <servlet-class>br.com.videoaulas.servlets.controller.ServletLogar2</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sair</servlet-name>
        <servlet-class>br.com.videoaulas.servlets.controller.Sair</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletLogar3</servlet-name>
        <servlet-class>br.com.videoaulas.servlets.controller.ServletLogar3</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListaUsuarios</servlet-name>
        <servlet-class>br.com.videoaulas.servlets.controller.ServletListaUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogar</servlet-name>
        <url-pattern>/ServletLogar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogar1</servlet-name>
        <url-pattern>/ServletLogar1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogar2</servlet-name>
        <url-pattern>/ServletLogar2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sair</servlet-name>
        <url-pattern>/Sair</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletLogar3</servlet-name>
        <url-pattern>/ServletLogar3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListaUsuarios</servlet-name>
        <url-pattern>/ServletListaUsuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/erro.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/erro.jsp</location>
    </error-page>
</web-app>
